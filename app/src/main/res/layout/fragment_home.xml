<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundWhite"
    tools:context=".HomeFragment">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/headerHome"
        style="@style/HeadlineStandard"
        android:textStyle="normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="How To Use" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/bodyHome"
        style="@style/BodyStandard"
        android:textStyle="normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btnSettings"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:text="@string/text_home"
        android:layout_below="@+id/headerHome"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="180dp"
        android:minHeight="75dp"
        android:layout_above="@+id/btnScan"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Settings"
        android:drawableEnd="@drawable/settings_icon"
         />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="180dp"
        android:minHeight="75dp"
        android:layout_above="@+id/btnScan"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:drawableEnd="@drawable/info_icon"
        android:text="More Info"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnScan"
        android:layout_width="match_parent"
        android:minHeight="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:outlineProvider="background"
        android:backgroundTint="@color/colorPrimary"
        android:hapticFeedbackEnabled="true"
        app:icon="@drawable/scan_icon_large"
        app:iconGravity="textTop"
        style="@style/HeadlineStandard"
        android:textColor="@color/colorTextWhite"
        android:text="Scan Now"/>



</RelativeLayout>